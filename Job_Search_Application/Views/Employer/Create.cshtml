@model Job_Search_Application.ViewModels.EmployerProfileViewModel;
@{
    ViewData["Title"] = "Create";
}

<br />
<div class="container shadow-lg rounded-2" style="background-color:rgb(153, 187, 255)">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <br />
            <div class="shadow-lg rounded-2" style="background-color:rgb(102, 153, 255)">


                <h1 style="text-align: center; color: aliceblue"><img src="~/resources/websitefiles/WorkWize__Logo2.png" style=" max-width:50px;" />  Complete your profile</h1>
                <h5 style="text-align: center; color: aliceblue">Your journey starts here!</h5>
                <br />
            </div>
            <hr />
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row d-flex justify-content-center">
                    <div class="col-3">
                        <div class="form-group">
                            <img src="~/resources/websitefiles/profile_default.png" class="rounded-circle d-flex justify-content-center" style="text-align: center; max-height: 200px; width: 200px; margin-right: 10px;" />
                            <label asp-for="Company_Logo">Profile Image</label>
                            <input asp-for="Company_Logo" type="file" class="form-control" placeholder="Insert Image" accept=".png" required>
                            <span asp-validation-for="Company_Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <div class="form-group">

                            <label asp-for="Company_Name" class="control-label">First Name:</label>

                            <input asp-for="Company_Name" class="form-control" />
                            <span asp-validation-for="Company_Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Company_CEO" class="control-label">Last Name:</label>
                            <input type="text" asp-for="Company_CEO" class="form-control" />
                            <span asp-validation-for="Company_CEO" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Company_Industry" class="control-label">Date of Birth:</label>
                            <input type="text" asp-for="Company_Industry" class="form-control" />
                            <span asp-validation-for="Company_Industry" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Location" class="control-label">Address:</label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Company_Description" class="control-label">Personal Summary:</label>
                    <textarea asp-for="Company_Description" class="form-control" id="exampleTextarea" rows="2" spellcheck="false"></textarea>
                    <span asp-validation-for="Company_Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Company_URL" class="control-label"></label>
                            <input type="url" asp-for="Company_URL" class="form-control" />
                            <span asp-validation-for="Company_URL" class="text-danger"></span>
                        </div>

                    </div>
                    <div>
                <div class="form-group">
                    <label asp-for="Company_Banner">Resume:</label>
                    <input type="file" id="formFile" asp-for="Company_Banner" class="form-control" accept=".png" required />
                    <span asp-validation-for="Company_Banner" class="text-danger"></span>
                    <span class="text-danger" data-valmsg-for="Resume" data-valmsg-replace="true"></span>
                </div>
                    </div>
                </div>
                <br />
                <div class="d-flex justify-content-center">
                    <div class="col-md-8">
                        <fieldset>
                            <button type="submit" value="Create" class="w-100 btn btn-lg btn-success shadow" style="background-color: #3C9AFF; color: white" id="save">Submit</button>
                        </fieldset>
                    </div>
                </div>
                <br />
            </form>
            <br />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
