@model Job_Search_Application.ViewModels.JobViewModel;
@{
    ViewData["Title"] = "Publish Job";
}

<br />
<br />
<div class="container-fluid shadow" style="background-color:rgb(150, 165, 234); border-radius:20px;">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <h1 style="text-align:center; color:aliceblue">Create a Job Listing</h1>
            <hr />
            <form asp-action="Publish_Job" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Job_Location" class="control-label"></label>
                            <input asp-for="Job_Location" class="form-control" />
                            <span asp-validation-for="Job_Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Job_Schedule" class="control-label"></label>
                            <input asp-for="Job_Schedule" class="form-control" />
                            <span asp-validation-for="Job_Schedule" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Job_Type" class="control-label"></label>
                            <input asp-for="Job_Type" class="form-control" />
                            <span asp-validation-for="Job_Type" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Salary" class="control-label"></label>
                            <input asp-for="Salary" class="form-control" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Classification" class="control-label"></label>
                            <input type="text" asp-for="Classification" class="form-control" />
                            <span asp-validation-for="Classification" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                

                    <div class="col">
                        <div class="form-group">
                            <label asp-for="DeactivationDate" class="control-label"></label>
                            <input type="datetime-local" asp-for="DeactivationDate" class="form-control" />
                            <span asp-validation-for="DeactivationDate" class="text-danger"></span>
                        </div>

                    </div>



                <div class="col">
                    <div class="form-group">
                        <label asp-for="Job_Details" class="control-label"></label>
                        <textarea id="editor" name="editor"  asp-for="Job_Details" class="form-control"></textarea>
                        <span asp-validation-for="Job_Details" class="text-danger"></span>
                    </div>
                </div>
             
                <br />
                <div class="d-flex justify-content-center">
                    <div class="col-md-8">
                        <fieldset>
                            <button type="submit" value="Create" class="w-100 btn btn-lg btn-success shadow  " style="background-color:powderblue; color:black" id="save">Publish Job</button>
                            <button type="submit" formaction="@Url.Action("DraftJobs")" formmethod="post" class="w-100 btn btn-lg btn-secondary shadow" style="background-color:lightgray; color:black" id="draft">Save as Draft</button>
                        </fieldset>
                      
                    </div>
                </div>
                <br />


            </form>
            <br />

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/summernote-ext-fontstyle@0.1.2/dist/fontstyle-plugin.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/summernote-ext-fontstyle@0.1.2/dist/fontstyle-plugin.min.js"></script>
    


    <script>
        $(document).ready(function () {
            $('#editor').summernote({
                toolbar: [
                    ['style', ['bold', 'italic', 'underline']],
                    ['fontsize', ['fontsize']],
                    ['fontname', ['fontname']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol']],
                    ['link', ['link']],
                    ['highlight', ['highlight']],
                ],
                buttons: {
                    fontname: function () {
                        var ui = $.summernote.ui;
                        var button = ui.button({
                            className: 'dropdown-toggle',
                            contents: '<i class="note-icon font"></i> <span class="caret"></span>',
                            tooltip: 'Font Name',
                            data: { toggle: 'dropdown' },
                        });

                        var $dropdown = ui.dropdown({
                            className: 'dropdown-fontname',
                            contents: '<ul class="dropdown-menu"></ul>',
                            callback: function ($dropdown) {
                                $dropdown.find('a').each(function () {
                                    var $this = $(this);
                                    var fontName = $this.data('value');
                                    $this.css('font-family', fontName);
                                });
                                $dropdown.find('.dropdown-menu').on('mousedown', function (e) {
                                    e.preventDefault();
                                    return false;
                                });
                                $dropdown.find('a').click(function (e) {
                                    e.preventDefault();
                                    var fontName = $(this).data('value');
                                    $('#editor').summernote('fontName', fontName);
                                });
                            },
                        });

                        button.render = function () {
                            var $btn = ui.button.render.call(this);
                            $btn.attr({
                                'aria-label': 'Font Name',
                                'data-toggle': 'dropdown',
                                'data-placement': 'bottom',
                            });
                            $btn.addClass('dropdown-toggle');
                            $btn.append($dropdown.render().css('min-width', '100px'));
                            return $btn;
                        };

                        return button.render();
                    }
                }
            });
        });
    </script>
}
